<div class="container">
    {{> header}}
    <div class="details-box">
        <span class="titlebar"><em><strong>{{name}}</strong></em></span>
        <span class="spanner">Team members</span>
        <div>
             {{#if players}}
            {{#each players}}
            {{> teamMember}}
            {{/each}}  
            {{else}}
                <p>No member info</p>
            {{/if}}
        </div>
        <span class="spanner">Description</span>
        {{#if description}}
           <p>{{description}}</p>
        {{else}}
        <p>No description</p>    
        {{/if}}
        <span class="spanner">Team management</span>
        {{> teamControls}}
    </div>
</div>

{{> footer}}